{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "module": "ESNext",
    "removeComments": false,
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/ts/types",
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/ts/plugins/client/**/*"
  ],
  "plugins": [
    {
      "name": "ts-lit-plugin",
      "strict": true
    }
  ]
}
